block content
  .container
    .row
      .gameSection.center-block
        h2.text-center Ellen Degeneres's Couch
        div.imgSection
          img(src='img/shop/ellen1.png'
          ,width='600', height='400')
        .col-md-6
          a.btn.btn-danger.btn-lg(href='#', style='width:200px;')
            i.fa.fa-times.fa-6
            | &nbsp;Not Interested
        .col-md-6
          .pull-right
            a.btn.btn-success.btn-lg(href='#', style='width:200px;')
              i.fa.fa-heart.fa-6
              | &nbsp;I Want this

  .comingSoonEmail
    .container
      h4.gray-lighter.text-center.text-uppercase
        | STAY UPDATED
      br
      form.form-inline(method='POST', action='comingsoon')
        .row-fluid.text-center
          input(type='hidden', name='_csrf', value=_csrf)
          input.form-control(style='width:300px', type='email', name='email', id='email', placeholder='Enter your email', required)
          button.btn.btn-primary.btn-reset(type='submit') Sign up